<!-- start header -->
<header class="main-header">
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<i class="material-icons">&#xE5D2;</i>
				</button>
				<!-- start logo -->
				{{#if @blog.logo}}
				<a class="navbar-brand image-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
				{{else}}
				<a class="navbar-brand text-logo" href="{{@blog.url}}">{{@blog.title}}</a>
				{{/if}}
				<!-- end logo -->
			</div>
			<div class="search-toggle-wrap pull-right">
				<a href="" class="search-toggle"><i class="material-icons">&#xE8B6;</i></i></a>
			</div>
			{{navigation}}
		</div>
	</nav>
</header>
<!-- end header -->