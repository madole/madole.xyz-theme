<div class="cover {{#is "home"}}cover-home{{/is}}" {{#if @blog.cover}}style="background-image: url({{@blog.cover}});"{{else}}style="background-image: url({{asset "images/bg-cover.jpg"}});"{{/if}}>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<h1 class="welcome-message">Welcome to {{@blog.title}}</h1>
				{{#if @blog.description}}
				{{#is "home"}}
				<p class="h4 description">{{@blog.description}}</p>
				{{/is}}
				{{/if}}
			</div>
		</div>
	</div>
</div>