{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{> cover-single}}
<div class="main-content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-sm-12 col-md-offset-2">
				<div class="card card-single card-error">
					<div class="error-block-inner">
						<h1 class="error-code"><span>{{code}}</span></h1>
						<h3>{{message}}</h3>
						<p class="message-manual">Unfortunately the page you were looking for could not be found.</p>
						<a href="{{@blog.url}}" class="btn btn-default ripple home-link">Visit Home page</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>